                <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
                <input type = "text" name = "comment[comment]" id = "message">  
                <input type = "submit" value = "Post a Message">
                </form>
    <% end %>
            
</div>